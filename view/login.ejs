<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" >
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
   
    html, body {
      height: 100%;
      margin: 0;
    }
    </style>
  </head>
  <body class="h-100">
    <div class="container h-100 d-flex justify-content-center ">
      
      <form class="w-75 mt-5" action="login" method="post">
        <div class="d-flex justify-content-center mt-4"> <i class="bi bi-whatsapp text-success" style="font-size: 130px;"></i> </div>
       
        <div class="form-text">
          <% if (error!='') { %>
            <div class="alert alert-danger">
              <%= error %>
            </div>
          <% } %>
        </div>
        <div class="form-group">
          <label for="mobile" class="form-label">Mobile Number</label>
          <input type="tel" name="mobile" id="mobile" class="form-control" >
          
        </div>
        <button class="btn btn-primary mt-2">Sign In</button>
        <a href="/register" class="btn btn-primary mt-2">Sign Up</a>
       </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" ></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" ></script>
  </body>
</html>